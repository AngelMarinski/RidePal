@using RidePal.Data.Models;
@using RidePal.WEB.Models;

@model CreatePlaylistViewModel

<style>
    span {
        color: red;
        font-size: 0.8em;
    }
</style>

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Playlist</p>

                                <form class="mx-1 mx-md-4" asp-action="CreatePlaylist" asp-controller="Playlist">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example1c">From</label>
                                            <input asp-for="Trip.StartPoint" type="text" id="form3Example1c" class="form-control" />
                                            <span asp-validation-for="Trip.StartPoint"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example1c">To</label>
                                            <input asp-for="Trip.Destination" type="text" id="form3Example1c" class="form-control" />
                                            <span asp-validation-for="Trip.Destination"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example1c">Title</label>
                                            <input asp-for="Name" type="text" id="form3Example1c" class="form-control" />
                                            <span asp-validation-for="Name"></span>
                                        </div>
                                    </div>                                                                      

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label >Choose an audience:</label>
                                            <select  asp-for="AudienceId" asp-items="@ViewBag.Audiences">                                               
                                            </select>
                                           @* <select asp-for="Audience" asp-items="@Html.GetEnumSelectList<Audience>()"></select>*@
                                        </div>
                                    </div>    

                                    <input asp-for="RepeatArtists" type="checkbox"/>
                                    <label asp-for="RepeatArtists">Repeat Artists</label>

                                    <input asp-for="TopSongs" type="checkbox"/>
                                    <label asp-for="TopSongs">Top Songs</label>

                                    @for (int i = 0; i < Model.GenresWithPercentages.Count; i++)
                                    {
                                        <label>@Model.GenresWithPercentages[i].GenreName</label>
                                        @Html.HiddenFor(model => model.GenresWithPercentages[i].GenreName)
                                        <input asp-for="@Model.GenresWithPercentages[i].Percentage"/>
                                    }

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <input type="submit" class="btn btn-primary btn-lg" value="Generate Playlist">
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
