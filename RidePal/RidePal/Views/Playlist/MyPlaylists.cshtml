@using RidePal.WEB.Models
@model IEnumerable<PlaylistViewModel>




<html>
<body>
    <div class="ms_inner_loader">
        <div class="ms_loader">
            <div class="ms_bars">
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
            </div>
        </div>
    </div>
    <div class="ms_main_wrapper">

        <div class="ms_content_wrapper padder_top90" style="padding-top:0px !important;">
            <div class="ms_top_artist" margin-right: 0px;">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="ms_heading">
                                <h1 style="font-size:30px">My Memories in Playlists</h1>
                            </div>
                        </div>
                        @{

                            foreach (var item in this.Model)
                            {
                                TimeSpan t = TimeSpan.FromSeconds(item.Duration);
                                string duration;
                                {

                                    duration = string.Format("{0:D1}h:{1:D2}m:{2:D2}s",
                                    t.Hours,
                                    t.Minutes,
                                    t.Seconds);
                                }
                               
                                <div class="col-lg-2 col-md-6" style="width:250px;margin-right:10px;">
                                    <a href="/Playlist?title=@item.Name">
                                        <div class="ms_rcnt_box marger_bottom30">
                                            <div class="ms_rcnt_box_img" style="min-height:230px;max-height:230px">
                                                <img src=@item.ImagePath alt="" class="img-fluid" style="min-height:230px;max-height:230px; min-width: 230px; max-width:230px">
                                                <div class="ms_main_overlay">
                                                    <div class="ms_box_overlay"></div>
                                                    
                                                </div>
                                            </div>
                                            <div class="ms_rcnt_box_text">
                                                <h3>@item.Name</h3>
                                                <p>@item.Tracks.Count tracks | @duration </p>
                                                <p>From: @item.Trip.StartPoint</p>
                                                <p>To: @item.Trip.Destination</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        }

                    </div>
                </div>
            </div>
            <!----Main div close---->
        </div>
    </div>

</body>
</html>