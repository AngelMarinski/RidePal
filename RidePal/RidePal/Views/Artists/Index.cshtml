@model List<RidePal.Services.DTOModels.ArtistDTO>

<!DOCTYPE html>
<html lang="en">
<body>
    <!----Loader---->
    <div class="ms_inner_loader">
        <div class="ms_loader">
            <div class="ms_bars">
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
            </div>
        </div>
    </div>
    <!----Main Wrapper Start---->

    <div class="ms_content_wrapper padder_top80">
        <!---Header--->
        <!---Featured Artists Music--->
        <div class="ms_featured_slider padder_top20">
            <div class="ms_heading">
                <h1>Featured Artists</h1>
                <span class="veiw_all"><a asp-action="Top">view more</a></span>
            </div>
            <div class="ms_relative_inner">
                <div class="ms_feature_slider swiper-container">
                    <div class="swiper-wrapper">

                        @{
                            foreach (var artist in this.Model.Take(20))
                            {
                                <div class="swiper-slide">
                                    <a asp-controller="Artists" asp-action="Artist" asp-route-id="@artist.Id">
                                        <div class="ms_rcnt_box">
                                            <div class="ms_rcnt_box_img">
                                                <img src=@artist.ImagePathMedium alt="">
                                                <div class="ms_main_overlay">
                                                    <div class="ms_box_overlay"></div>                                                    
                                                </div>
                                            </div>
                                            <div class="ms_rcnt_box_text">
                                                <h3>@artist.Name</h3>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>
                <!-- Add Arrows -->
                <div class="swiper-button-next1 slider_nav_next"></div>
                <div class="swiper-button-prev1 slider_nav_prev"></div>
            </div>
        </div>
        <!----Top Artist Section---->
        <div class="ms_top_artist">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ms_heading">
                            <h1>Top Artists</h1>
                        </div>
                    </div>

                    @{
                        foreach (var artist in this.Model.Skip(20).Take(30))
                        {
                            <div class="col-lg-2 col-md-6">
                                <a asp-controller="Artists" asp-action="Artist" asp-route-id="@artist.Id">
                                    <div class="ms_rcnt_box marger_bottom30">
                                        <div class="ms_rcnt_box_img">
                                            <img src=@artist.ImagePathMedium alt="" class="img-fluid">
                                            <div class="ms_main_overlay">
                                                <div class="ms_box_overlay"></div>                                               
                                            </div>
                                        </div>
                                        <div class="ms_rcnt_box_text">
                                            <h3>@artist.Name</h3>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }

                    }


                </div>
            </div>
        </div>
        <!----Main div close---->
    </div>

</body>
</html>