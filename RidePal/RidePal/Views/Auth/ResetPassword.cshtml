@using RidePal.Services.Models
@model ResetPasswordModel

@{
    ViewData["Title"] = "ResetPassword";
}
<html>
<head>
    <link rel="stylesheet" href="~/css/elegant-icons.css">
     <title>MovieForum | ResetPassword</title>
</head>
<body>
<center>
<div class="container" style="padding-top: 40px">

    <h1 class="display-4 centered">Reset password</h1>

    <hr />
    <div class="row">
        <div class="offset-4 col-md-4">
            @if (Model?.IsSuccess == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>
                       You have updated your password successfully.
                    </p>
                </div>
            }
            else
            {
                <form asp-action="ResetPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" class="form-control" />
                    <input type="hidden" asp-for="Token" class="form-control" />
                    <div class="form-group" style="padding-bottom:10px">
                        <label asp-for="NewPassword" class="control-label">New Password</label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom:10px">
                        <label asp-for="ConfirmNewPassword" class="control-label">Confirm New Password</label>
                        <input asp-for="ConfirmNewPassword" class="form-control" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Reset password" class="btn btn-primary" style="background: #e53637; border:none" />
                    </div>
                </form>
            }

        </div>
    </div>

</div>
</center>
</body>
</html>