@using RidePal.Services.Models
@model ResetPasswordModel


<html>
<body>
    <center>
        <div class="container" style="padding-top: 40px">
            <div class="row">
                <div class="offset-4 col-md-4">
                    @if (Model?.IsSuccess == true)
                    {
                        <div class="row centered" style="font-size: 22px;color: white;margin-top: 50px">
                            <p>
                                You have updated your password successfully.
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="ms_heading">

                            <h1 class="display-4 centered">Reset password</h1>
                        </div>

                        <hr />
                        <form asp-action="ResetPassword">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="UserId" class="form-control" />
                            <input type="hidden" asp-for="Token" class="form-control" />
                            <div class="form-group" style="padding-bottom:10px">
                                <label asp-for="NewPassword" class="control-label" style="color:white">New Password</label>
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="padding-bottom:10px">
                                <label asp-for="ConfirmNewPassword" class="control-label" style="color:white">Confirm New Password</label>
                                <input asp-for="ConfirmNewPassword" class="form-control" />
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Reset" class="ms_btn login_btn" style="border:none" />
                            </div>
                        </form>
                    }

                </div>
            </div>

        </div>
    </center>
</body>
</html>