
@using RidePal.Services.Models;
@model EmailConfirmModel

<html>
<body>
    <center>
        <div class="container centered" style="padding-top: 100px">
            <div class="row text-center">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    @if (Model.EmailVerified)
                    {
                        <div>
                            <p style="color:white; padding-top: 10px; font-size: 20px;">Your email has been verified successfully.</p>
                        </div>
                    }
                    else
                    {
                        if (Model.EmailSent)
                        {
                            <p style="color:white; padding-top: 10px; font-size: 20px;">We have sent an email on your email address.</p>
                        }

                        <form asp-action="ConfirmEmail">
                            
                            <p style="color:white; padding-top: 10px; font-size: 20px;">Did not get any email or deleted by mistake?</p>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="text" asp-for="Email" style="margin-top:10px; width: 100%"/>

                            <div class="form-group">
                                @*<a type="submit" value="Resend confirmation email" class="ms_btn login-btn" asp-action="ConfirmEmail" /><></>*@
                                <a class="ms_btn login_btn" asp-action="ConfirmEmail" style="margin-top: 10px"><span>Resend</span></a>
                        
                            </div>

                        </form>
                    }
                </div>
            </div>
        </div>
    </center>
</body>
</html>