@model RidePal.Web.Models.ForgotPasswordViewModel


<html>
<body>
    <center>
        <div class="row centered">
            @if (Model?.EmailSent == true)
            {
                <div>
                    <p style="font-size: 22px; color:white; margin-top:50px;">We have sent an email on your registered email address</p>
                </div>

            }
            else
            {

                <p style="color:white; padding-top: 100px; font-size: 20px;">Forgot your password? No worries, you can reset it easily!</p>
                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label" style="font-size: 20px; color:white"> Enter your email address</label>
                        <input asp-for="Email" class="form-control" style="margin: 20px 0; width:30%; max-width: 30%" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Reset" class="ms_btn login_btn" style="border:none" />
                    </div>
                </form>
            }
        </div>
    </center>
</body>
</html>