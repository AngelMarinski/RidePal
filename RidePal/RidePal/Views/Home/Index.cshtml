@model RidePal.Services.DTOModels.TripDTO;
<html>
@{
    var countries = new List<String> { "Bulgaria", "Serbia", "Albania", "Romania" };

    var countriesList = new SelectList(countries);
}
<head>

</head>
<body>
    <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Depart Country</label>
                <input type="text" class="form-control" name="DepartCountry" id="inputAddress"
                       value="@this.ViewData["DepartCountry"]" placeholder="@this.ViewData["DepartCountry"]" />
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Destination Country</label>
                <input type="text" class="form-control" name="ArriveCountry" id="inputAddress"
                       value="@this.ViewData["ArriveCountry"]" placeholder="@this.ViewData["ArriveCountry"]" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Depart City</label>
                <input type="text" class="form-control" name="DepartCity" id="inputAddress"
                       value="@this.ViewData["DepartCity"]" placeholder="@this.ViewData["DepartCity"]" />
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Destination City</label>
                <input type="text" class="form-control" name="ArriveCity" id="inputAddress"
                       value="@this.ViewData["ArriveCity"]" placeholder="@this.ViewData["ArriveCity"]" />

            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputAddress">Depart Address</label>
                <input type="text" class="form-control" name="DepartAddress" id="inputAddress"
                       value="@this.ViewData["DepartAddress"]" placeholder="@this.ViewData["DepartAddress"]" />

            </div>
            <div class="form-group col-md-6">
                <label for="inputAddress2">Destination Address </label>
                <input type="text" class="form-control" name="ArriveAddress" id="inputAddress2"
                       value="@this.ViewData["ArriveAddress"]" placeholder="@this.ViewData["ArriveAddress"]" />

            </div>
        </div>


        <button type="submit" class="btn btn-primary">Generate trip</button>
    </form>

    @{
        if (this.Model != null)
        {
            <h4>Your trip distance is: @this.Model.Distance km.</h4>
            <h4>Your trip duration is: @this.Model.Duration min.</h4>
        }
    }
</body>
</html>